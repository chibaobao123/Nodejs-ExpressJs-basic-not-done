extends ../layout/layout.pug

block content
	h1 Products


	form(action="/products/search",method="GET")
		input(type="text",name="q",id="q-value",value=q)
		button(class="btn btn-primary ml-2") Search

	.row
		each product in products
			.col-3.my-4
				.card(style='width: 14rem; height:500px')
					img.card-img-top(src=product.image)
					.card-body.text-center
						h5.card-title= product.name
						p.card-text= product.decription
						a.btn.btn-primary(href='#') Go somewhere

	nav(aria-label='Page navigation example')
		ul.pagination
			li.page-item
				a.page-link(href='#') Previous
			li.page-item
				a.page-link(href='#') 1
			li.page-item
				a.page-link(href='#') 2
			li.page-item
				a.page-link(href='#') 3
			li.page-item
				a.page-link(href='#') 4
			li.page-item
				a.page-link(href='#') 5
			li.page-item
				a.page-link(href='#') 6
			li.page-item
				a.page-link(href='#') 7
			li.page-item
				a.page-link(href='#') 8
			li.page-item
				a.page-link(href='#') 9
			li.page-item
				a.page-link(href='#') 10
			li.page-item
				a.page-link(href='#') 11
			li.page-item
				a.page-link(href='#') 12
			li.page-item
				a.page-link(href='#') 13
			li.page-item
				a.page-link(href='#') Next
