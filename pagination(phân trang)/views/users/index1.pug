extends ../layout/layout.pug

block content
	h1 User

	a(href="/users/create") new

	form(action="/users/search",method="GET")
		input(type="text",name="q",id="q-value",value=q)
		button(class="btn btn-primary ml-2") Search

	table.table
		tr
			th name
			th phone
			th action
		each user in users
			tr
				td= user.name
				td= user.phone
				td
					a(href = "/users/"+user.id) View