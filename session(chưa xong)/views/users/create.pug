extends ../layout/layout.pug

block content
	h1 Create

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method="POST" , enctype="multipart/form-data")
		.form-group
			label(for="name") name
			input#name.form-control(name="name",type="text",value= values ? values.name : '')
		.form-group
			label(for="phone") phone
			input#phone.form-control(name="phone",type="text",value= values ? values.phone : '')
		.form-group
			label(for="avatar") avatar
			input#file.form-control-file(name="avatar",type="file")
		button.btn.btn-primary(type='submit') Create